{
  "extends": [
    "stylelint-config-standard-scss",
    "stylelint-config-prettier-scss"
  ],
  "rules": {
    "block-no-empty": null,
    "unit-allowed-list": ["em", "rem", "vw", "vh", "px", "ch", "%", "s", "deg"],
    "alpha-value-notation": ["percentage", { "exceptProperties": ["opacity"] }]
  }
}
